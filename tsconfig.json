{
  "compilerOptions": {
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "standards/herald": [
        "src/libs/herald/src"
      ],
      "standards/herald/*": [
        "src/libs/herald/src/*"
      ]
    }
  },
  "include": [
    "src", "libs"
  ],
  "exclude": [
    "node_modules"
  ]
}